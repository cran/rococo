citHeader("To cite package 'rococo' in publications use:")

citEntry(entry="Article",
         title=paste("Robust rank correlation coefficients on the basis of",
                     "fuzzy orderings: initial steps"),
         author=personList(as.person("Ulrich Bodenhofer"),
                           as.person("Frank Klawonn")),
         journal="Mathware Soft Comput.",
         year="2008",
         volume="15",
         number="1",
         pages="5--20",
         textVersion =
             paste("Ulrich Bodenhofer and Frank Klawonn (2008)",
                   "Robust rank correlation coefficients on the basis of",
                   "fuzzy orderings: initial steps.",
                   "Mathware Soft Comput. 15(1):5-20."))

citFooter("To obtain the references in BibTex format, enter",
          "'toBibtex(citation(\"rococo\"))'")
